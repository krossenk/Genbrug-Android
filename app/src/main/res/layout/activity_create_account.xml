<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container2" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iha.genbrug.CreateAccountActivity">

    <EditText
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:id="@+id/createUsername"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/createPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/createUsername"
        android:layout_alignLeft="@+id/createUsername"
        android:layout_alignStart="@+id/createUsername"
        android:layout_alignRight="@+id/createUsername"
        android:layout_alignEnd="@+id/createUsername" />

    <EditText
        android:id="@+id/createRePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:layout_below="@+id/createPassword"
        android:layout_alignLeft="@+id/createPassword"
        android:layout_alignStart="@+id/createPassword"
        android:layout_alignRight="@+id/createPassword"
        android:layout_alignEnd="@+id/createPassword" />

    <Button
        android:id="@+id/createSignUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:onClick="authenticateSignUp"
        android:text="Sign Up"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
