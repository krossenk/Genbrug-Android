<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iha.genbrug.TakeItem" android:background="#00ffffff" android:orientation="horizontal"
    android:weightSum="2">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:background="#ffffff">

        <View android:id="@+id/separator"
            android:background="#000000"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_centerVertical ="true"
            android:layout_alignParentTop="true"/>



         <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/imageView1"
             android:layout_marginLeft="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginTop="10dp" />


          />

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="100dp" android:background="#ffffff">

            <View android:id="@+id/separator2"
                android:background="#000000"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                android:layout_centerVertical ="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:textSize="18sp"
                android:textColor="#484a4f"
                android:text="@string/gitem_headline"
                android:id="@+id/tv_headline"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="@string/gitem_description"
                android:textSize="12sp"
                android:paddingTop="4dp"
                android:paddingBottom="20dp"
                android:paddingLeft="16dp"
                android:textColor="#abaeb3"
                android:id="@+id/tv_desc" />

        </LinearLayout>

</LinearLayout>
