<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iha.genbrug.DetailActivity"
    android:weightSum="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:background="#af906d"
    android:id="@+id/linearLayout">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  â†  Details"
        android:textColor="#FFFFFF"
        android:background="#af906d"
        android:id="@+id/detailsBackBtn"
        android:onClick="callFeedActivity"
        android:textSize="15dp"
        android:gravity="left|center_vertical"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_below="@+id/linearLayout"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:weightSum="1"
    android:id="@+id/linearLayout2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#777777"
        android:id="@+id/item_photo" />


</LinearLayout>

    <RelativeLayout
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:textColor="#484a4f"
            android:id="@+id/headlineTextView"
            android:layout_weight="1.01"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:textColor="#abaeb3"
            android:id="@+id/descTextView"
            android:layout_weight="3.52"
            android:layout_below="@+id/headlineTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/Logout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="logOut"/>


        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="Sub"
            android:textColor="@android:color/white"
            android:id="@+id/subscribBtn"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/Logout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:onClick="subscribe"/>

    </RelativeLayout>

</RelativeLayout>
